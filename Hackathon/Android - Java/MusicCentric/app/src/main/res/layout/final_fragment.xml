<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView

        android:id="@+id/final_frag_img"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:animateLayoutChanges="true"
        android:src="@mipmap/museme" />


    <android.support.v7.widget.AppCompatTextView

        android:id="@+id/final_frag_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/final_frag_img"
        android:layout_marginTop="16dp"
        android:alpha="0.8"
        android:animateLayoutChanges="true"
        android:gravity="center_horizontal"
        android:text="Have an account?"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp" />

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/final_frag_title"
        android:layout_marginTop="16dp"
        android:animateLayoutChanges="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/final_frag_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:alpha="0.5"
                android:background="@color/md_white_1000"
                android:hint="Username"
                android:padding="16dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/final_frag_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/final_frag_user"
                android:layout_marginTop="16dp"
                android:alpha="0.5"
                android:background="@color/md_white_1000"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColor="@color/colorPrimary" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/final_frag_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/final_frag_email"
                android:layout_marginTop="16dp"
                android:alpha="0.5"
                android:background="@color/md_white_1000"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="@color/colorPrimary" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/final_frag_btn"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentBottom="true"

                android:alpha="0.8"
                android:background="@color/colorPrimary"
                android:text="Continue" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>