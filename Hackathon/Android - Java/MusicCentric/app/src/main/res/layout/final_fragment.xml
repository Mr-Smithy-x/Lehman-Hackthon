<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:padding="16dp">

    <ImageView

        android:animateLayoutChanges="true"
        android:id="@+id/final_frag_img"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:src="@mipmap/ic_launcher" />


    <android.support.v7.widget.AppCompatTextView

        android:animateLayoutChanges="true"
        android:id="@+id/final_frag_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/final_frag_img"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="Have an account?"
        android:textSize="22sp" />

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="8dp"

        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/final_frag_title"
        android:layout_marginTop="22dp">

        <RelativeLayout
            android:layout_width="match_parent"

            android:animateLayoutChanges="true"
            android:layout_height="wrap_content">


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/final_frag_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/md_white_1000"
                android:hint="Username"
                android:padding="16dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/final_frag_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/final_frag_user"
                android:layout_marginTop="16dp"
                android:background="@color/md_white_1000"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="16dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/final_frag_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/final_frag_email"
                android:layout_marginTop="16dp"
                android:background="@color/md_white_1000"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="16dp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/final_frag_btn"
                android:layout_width="match_parent"
                android:background="?attr/colorPrimary"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentBottom="true"
                android:text="Continue" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>