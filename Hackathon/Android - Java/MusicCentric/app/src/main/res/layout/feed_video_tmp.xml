<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:elevation="4dp"
            android:padding="16dp">


            <ImageView
                android:id="@+id/feed_temp_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_launcher" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/feed_temp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/feed_temp_image"
                android:paddingTop="4dp"
                android:text="Title"
                android:textSize="18sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/feed_temp_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/feed_temp_title"
                android:layout_toRightOf="@id/feed_temp_image"
                android:text="Title"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:background="@color/md_black_1000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:elevation="2dp"
                android:layout_centerInParent="true"
                android:tint="@color/md_white_1000"
                android:src="@drawable/ic_play_arrow_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <VideoView
                android:layout_centerInParent="true"
                android:id="@+id/feed_video_temp_weboption"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
             />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView

                android:id="@+id/feed_temp_fav"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:tint="@color/md_red_500"
                android:layout_marginRight="16dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_favorite_outline_128dp" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_toRightOf="@id/feed_temp_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:layout_centerVertical="true"
                android:id="@+id/feed_temp_desc"
                android:singleLine="false"
                android:text="Description"
                android:textSize="15sp" />


        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>